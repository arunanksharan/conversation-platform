{
  "name": "@kuzushi/widget",
  "version": "1.0.0",
  "description": "Embeddable AI assistant widget with chat and voice support",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && pnpm run build:css",
    "build:css": "tailwindcss -i ./src/ui/styles.css -o ./dist/styles.css --minify",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@tanstack/react-router": "^1.91.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "react-aria-components": "^1.2.0",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.2.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^4.0.0-alpha.14",
    "typescript": "^5.4.0",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  }
}
