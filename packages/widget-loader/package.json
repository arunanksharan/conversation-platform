{
  "name": "@kuzushi/widget-loader",
  "version": "1.0.0",
  "description": "Loader script for Kuzushi embeddable widget",
  "main": "./dist/widget-loader.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && vite build --config vite.standalone.config.ts",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@kuzushi/widget": "workspace:*",
    "@r2wc/react-to-web-component": "^2.0.3"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.4.0",
    "vite": "^5.2.0"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
